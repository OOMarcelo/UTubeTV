<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#f000"
                android:angle="90"
                android:endColor="#f777"
                android:type="linear"/>

            <corners android:radius="10dp"/>

            <stroke
                android:width="1dp"
                android:color="#6fff"/>
        </shape>

    </item>
</layer-list>

