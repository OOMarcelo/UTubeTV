<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#222"
                android:angle="270"
                android:endColor="#000"
                android:type="linear"/>

            <corners android:radius="10dp"/>

            <stroke
                android:width="2dp"
                android:color="#7fff"/>
        </shape>

    </item>
</layer-list>

