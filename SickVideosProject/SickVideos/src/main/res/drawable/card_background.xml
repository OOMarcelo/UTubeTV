<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:top="10dp"
        android:left="2dp"
        android:right="2dp"
        >

        <shape android:shape="rectangle">
            <corners android:radius="3dp"/>
            <solid android:color="@color/card_shadow_color"/>
        </shape>
    </item>

    <item
        android:top="10dp"
        android:bottom="1dp"
        >

        <shape android:shape="rectangle">
            <corners android:radius="3dp"/>
            <stroke
                android:color="@color/card_frame_color"
                android:width="1dp"></stroke>
            <solid android:color="@color/card_fill_color"/>
        </shape>
    </item>

</layer-list>