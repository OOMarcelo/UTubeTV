<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:left="16dp"
        android:right="16dp"
        >
        <shape>
            <corners
                android:bottomLeftRadius="8dp"
                android:bottomRightRadius="8dp"/>

            <stroke
                android:color="#2fff"
                android:width="1dp"/>

            <gradient
                android:startColor="#b000"
                android:endColor="#e000"
                android:angle="270"
                android:type="linear"/>

        </shape>
    </item>

</layer-list>

