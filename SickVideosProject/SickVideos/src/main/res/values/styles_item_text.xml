<resources>

    <style name="VideoTextTitle">
        <item name="android:padding">8dp</item>

        <item name="android:textColor">#fff</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>

        <item name="android:shadowColor">#111</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:lineSpacingExtra">-2sp</item>
    </style>

    <style name="VideoTextDescription">
        <item name="android:padding">8dp</item>

        <item name="android:textColor">#fff</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>

        <item name="android:shadowColor">#111</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:lineSpacingExtra">-1sp</item>
    </style>

    <style name="VideoTextTitle_card">
        <item name="android:textColor">@color/card_title_color</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>

        <item name="android:lineSpacingExtra">-2sp</item>
    </style>

    <style name="VideoTextDescription_card">
        <item name="android:textColor">@color/card_description_color</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">normal</item>

        <item name="android:lineSpacingExtra">-1sp</item>
    </style>

</resources>
