<resources>

    <style name="GridDefaults">
        <item name="android:cacheColorHint">@android:color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:columnWidth">220dp</item>
        <item name="android:horizontalSpacing">4dp</item>
        <item name="android:verticalSpacing">4dp</item>
        <item name="android:numColumns">auto_fit</item>
        <item name="android:fastScrollEnabled">true</item>
        <item name="android:drawSelectorOnTop">true</item>
        <item name="android:requiresFadingEdge">vertical</item>
        <item name="android:stretchMode">columnWidth</item>
        <item name="android:gravity">center</item>
        <item name="android:listSelector">@drawable/grid_list_selector</item>
    </style>

</resources>
