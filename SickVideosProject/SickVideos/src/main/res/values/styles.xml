<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBarDark</item>
    </style>

    <!-- Activity themes -->

    <style name="ActivityTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/startup_background</item>

        <item name="drawerBackground">@android:color/black</item>
        <item name="drawerItemTextColor">@android:color/white</item>
        <item name="drawerItemBackground">?android:attr/activatedBackgroundIndicator</item>

    </style>

    <style name="ActivityThemeLight" parent="android:Theme.Holo.Light">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:actionBarStyle">@style/ActionBarLight</item>

        <item name="drawerBackground">@android:color/white</item>
        <item name="drawerItemTextColor">@android:color/black</item>
        <item name="drawerItemBackground">?android:attr/activatedBackgroundIndicator</item>

    </style>

    <style name="StartupActivityTheme" parent="ActivityTheme">
        <item name="android:actionBarStyle">@style/StartupActionBar</item>
    </style>

    <!-- ActionBar styles -->

    <style name="ActionBarDark"
           parent="android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/action_bar_dark</item>
        <item name="android:displayOptions">showHome|showTitle</item>
    </style>

    <style name="ActionBarLight"
           parent="android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/action_bar_light</item>
    </style>

    <style name="StartupActionBar" parent="ActionBarDark">
        <item name="android:displayOptions">showHome</item>
    </style>

</resources>
