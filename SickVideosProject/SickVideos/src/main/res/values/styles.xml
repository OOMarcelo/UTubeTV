<resources>

    <!-- Change this to AppThemeDark in your theme file if you want dark at the default. -->

    <style name="AppTheme" parent="AppThemeLight">
    </style>

    <!-- Dark or light, override above in theme to get one or the other -->

    <style name="AppThemeLight" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="playerToolbarBackground">@drawable/toolbar_light</item>
    </style>

    <style name="AppThemeDark" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBarDark</item>
        <item name="playerToolbarBackground">@drawable/toolbar_light</item>
    </style>

    <!-- To avoid any white flicker when launching app, the background -->
    <style name="DrawerActivityTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/window_background_color</item>
    </style>

    <!-- ActionBar styles -->

    <style name="ActionBar"
           parent="android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/action_bar</item>
    </style>

    <style name="ActionBarDark"
           parent="android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/action_bar</item>
    </style>

</resources>
