<com.sickboots.sickvideos.AnimatedFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                              android:background="#333"

                                              android:layout_width="match_parent"
                android:layout_height="match_parent">

    <GridView
        android:id="@+id/gridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnWidth="220dp"
        android:numColumns="auto_fit"
        android:fastScrollEnabled="true"
        android:drawSelectorOnTop="true"
        android:stretchMode="columnWidth"
        android:gravity="center"
        />

    <LinearLayout
        android:id="@+id/video_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/close_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@android:drawable/btn_dialog"/>

        <fragment
            class="com.sickboots.sickvideos.VideoPlayerFragment"
            android:id="@+id/video_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>



</com.sickboots.sickvideos.AnimatedFrameLayout>
