<?xml version="1.0" encoding="utf-8"?>
<com.sickboots.sickvideos.FragmentLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                         android:layout_width="match_parent"
                                         android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_window_background_color"

        android:descendantFocusability="blocksDescendants">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_background"
                android:orientation="vertical"

                android:padding="12dp">

                <TextView
                    android:id="@+id/text_view"
                    style="@style/VideoTextTitle_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:ellipsize="end"
                    android:maxLines="2"/>

                <include
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_margin="10dp"

                    layout="@layout/youtube_item_image"/>

                <TextView
                    android:id="@+id/description_view"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"/>

            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="12dp"
                android:background="@android:color/holo_red_light"
                android:padding="16dp"
                android:text="Watch Now"
                android:textColor="@android:color/white"/>

        </LinearLayout>
    </ScrollView>
</com.sickboots.sickvideos.FragmentLayout>
