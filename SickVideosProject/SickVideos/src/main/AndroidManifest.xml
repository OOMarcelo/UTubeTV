<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sickboots.sickvideos"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.sickboots.sickvideos.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/StartupActivityTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sickboots.sickvideos.DrawerActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ActivityTheme" >
        </activity>
        <activity
            android:name="com.sickboots.sickvideos.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.sickboots.sickvideos.InfoActivity"
            android:label="" >
            <intent-filter>
                <action android:name="rs.sickboots.sickvideos.InfoActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sickboots.sickvideos.unused.PlaylistChooserActivity"
            android:label="@string/title_activity_playlist_chooser"
            android:theme="@android:style/Theme.Holo.Dialog" >
        </activity>

        <service
            android:name="com.sickboots.sickvideos.youtube.YouTubeAPIService"
            android:enabled="true"
            android:exported="false" />

        <provider
            android:name="com.sickboots.sickvideos.database.YouTubeContentProvider"
            android:authorities="com.sickboots.sickvideos.provider"
            android:enabled="true"
            android:exported="false" >
        </provider>

    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="android.permission.VIBRATE" />

</manifest>
