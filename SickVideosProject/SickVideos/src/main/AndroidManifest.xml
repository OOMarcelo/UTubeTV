<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.distantfuture.videos">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.distantfuture.videos.mainactivity.DrawerActivity"
            android:label="@string/app_name"
            android:configChanges="orientation|keyboard|screenSize"
            android:theme="@style/DrawerActivityStartupTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

        </activity>
        <activity
            android:name="com.distantfuture.videos.activities.SettingsActivity"
            android:label="@string/title_activity_settings">
        </activity>
        <activity
            android:name="com.distantfuture.videos.activities.ChannelLookupActivity"
            android:windowSoftInputMode="stateAlwaysVisible"
            android:label="@string/title_activity_channel_lookup">
        </activity>
        <activity
            android:name="com.distantfuture.videos.activities.AuthActivity"
            android:label="Auth"
            android:theme="@android:style/Theme.Translucent.NoTitleBar">
        </activity>
        <activity
            android:name="com.distantfuture.videos.activities.InfoActivity"
            android:label="">
        </activity>
        <activity
            android:name="com.distantfuture.videos.introactivity.IntroActivity"
            android:theme="@style/IntroActivityTheme"
            android:label="">
        </activity>
        <activity
            android:name="com.distantfuture.videos.activities.CreditsActivity"
            android:label="@string/pref_title_credits">
        </activity>

        <service
            android:name="com.distantfuture.videos.services.YouTubeListService"
            android:enabled="true"
            android:exported="false"/>
        <provider
            android:name="com.distantfuture.videos.database.YouTubeContentProvider"
            android:authorities=".res-auto.provider"
            android:enabled="true"
            android:multiprocess="true"
            android:exported="false">
        </provider>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>

    </application>

</manifest>
